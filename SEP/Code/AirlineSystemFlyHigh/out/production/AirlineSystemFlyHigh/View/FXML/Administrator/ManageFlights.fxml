<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="869.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FlightsController">
    <TableView fx:id="flightsTable" layoutX="181.0" prefHeight="400.0" prefWidth="693.0">
        <columns>
            <TableColumn fx:id="flightNumber" prefWidth="81.0" text="Flight No" />
            <TableColumn fx:id="departureTime" prefWidth="125.0" text="Departure Time" />
            <TableColumn fx:id="arrivalTime" minWidth="0.0" prefWidth="97.0" text="Arrival Time" />
            <TableColumn fx:id="airplaneIDNumber" minWidth="6.0" prefWidth="98.0" text="Airplane No" />
            <TableColumn fx:id="departurePlace" prefWidth="125.0" text="Departure place" />
            <TableColumn fx:id="arrivalPlace" prefWidth="103.0" text="Arrival place" />
            <TableColumn fx:id="status" prefWidth="61.0" text="Status" />
        </columns>
    </TableView>
    <Button cancelButton="true" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" text="&lt;" />
    <Button layoutX="13.0" layoutY="67.0" mnemonicParsing="false" onAction="#addFlightButtonPressed" prefHeight="31.0" prefWidth="155.0" text="Add Flight" />
    <Button fx:id="removeButton" layoutX="14.0" layoutY="156.0" mnemonicParsing="false" onAction="#removeFlightButtonPressed" prefHeight="31.0" prefWidth="155.0" text="Remove Flight" />
    <TextField layoutX="14.0" layoutY="112.0" prefHeight="31.0" prefWidth="155.0" promptText="Search Flights" fx:id="searchField"  />

    <Button fx:id="confirm" layoutX="10.0" layoutY="221.0" mnemonicParsing="false" onAction="#confirmButtonPressed" prefHeight="31.0" prefWidth="74.0" text="Confirm" />
    <Button fx:id="forsake" layoutX="93.0" layoutY="221.0" mnemonicParsing="false" onAction="#forsakeButtonPressed" prefHeight="31.0" prefWidth="74.0" text="Forsake" />
    <Label fx:id="confirmationLabel" layoutX="47.0" layoutY="200.0" text="Are you sure?" />
   <Button fx:id="editButton" layoutX="13.0" layoutY="259.0" mnemonicParsing="false" onAction="#editButtonPressed" prefHeight="31.0" prefWidth="155.0" text="Edit" />
   <Button  layoutX="12.0" layoutY="299.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="155.0" onAction="#seeCrewButtonPressed" text="See Crew" />
   <Button  layoutX="14.0" layoutY="344.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="155.0" onAction="#seePassengersButtonPressed" text="See Passengers" />

</AnchorPane>
