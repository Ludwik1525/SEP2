<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.PassengersController"
            prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="passengersTable" layoutX="194.0" onMouseClicked="#removeButtonAppear" prefHeight="400.0" prefWidth="561.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="95.0" text="Name" />
            <TableColumn fx:id="birthdayColumn" prefWidth="104.0" text="Birthday" />
            <TableColumn fx:id="phoneNumberColumn" prefWidth="114.0" text="Phone number" />
            <TableColumn fx:id="emailColumn" prefWidth="86.0" text="Email" />
            <TableColumn fx:id="membershipDateColumn" prefWidth="160.0" text="Membership date" />
            <TableColumn fx:id="addressColumn" prefWidth="127.0" text="Address" />
        </columns>
    </TableView>
    <Button cancelButton="true" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" text="&lt;" />
    <Button fx:id="removeButton" layoutX="14.0" layoutY="156.0" mnemonicParsing="false" onAction="#removeClubMemberButtonPressed" prefHeight="31.0" prefWidth="166.0" text="Remove member" visible="false" />
    <TextField layoutX="14.0" layoutY="67.0" prefHeight="31.0" prefWidth="166.0" promptText="Search members" fx:id="searchField" />

    <Button fx:id="confirm" layoutX="14.0" layoutY="248.0" mnemonicParsing="false" onAction="#confirmButtonPressed" prefWidth="80.0" text="Confirm" visible="false" />
    <Button fx:id="forsake" layoutX="103.0" layoutY="248.0" mnemonicParsing="false" onAction="#forsakeButtonPressed" prefHeight="31.0" prefWidth="80.0" text="Forsake" visible="false" />
    <Label fx:id="confirmationLabel" layoutX="52.0" layoutY="219.0" text="Are you sure?" visible="false" />
    <Button layoutX="11.0" layoutY="314.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="166.0" text="Edit" onAction="#editButtonPressed"/>
</AnchorPane>
