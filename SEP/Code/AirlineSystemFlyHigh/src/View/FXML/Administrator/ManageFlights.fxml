<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FlightsController">
    <TableView fx:id="flightsTable" layoutX="297.0" prefHeight="400.0" prefWidth="472.0">
        <columns>
            <TableColumn fx:id="flightNumberColumn" prefWidth="127.0" text="Flight Number" />
            <TableColumn fx:id="departureTimeColumn" prefWidth="57.0" text="Departure Time" />
            <TableColumn fx:id="arrivalTimeColumn" prefWidth="42.0" text="Arrival Time" />
            <TableColumn fx:id="airplaneColumn" prefWidth="42.0" text="Airplane" />
            <TableColumn fx:id="crewColumn" prefWidth="42.0" text="Crew" />
            <TableColumn fx:id="departurePlaceColumn" prefWidth="96.0" text="Departure place" />
            <TableColumn fx:id="arrivalPlaceColumn" prefWidth="96.0" text="Arrival place" />
            <TableColumn fx:id="passengersColumn" prefWidth="96.0" text="Passengers" />
            <TableColumn fx:id="statusColumn" prefWidth="96.0" text="Status" />
        </columns>
    </TableView>
    <Button cancelButton="true" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" text="&lt;" />
    <Button layoutX="13.0" layoutY="67.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="262.0" onAction="#addFlightButtonPressed" text="Add Flight" />
    <Button fx:id="removeButton" layoutX="14.0" layoutY="156.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="262.0" onAction="#removeFlightButtonPressed" visible="false" text="Remove Flight" />
    <TextField layoutX="14.0" layoutY="112.0" prefHeight="31.0" prefWidth="262.0" promptText="Search Flights" />
</AnchorPane>
