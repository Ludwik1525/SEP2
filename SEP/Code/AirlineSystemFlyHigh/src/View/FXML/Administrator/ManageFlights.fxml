<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FlightsController">
    <TableView fx:id="flightsTable" layoutX="297.0" prefHeight="400.0" prefWidth="472.0">
        <columns>
            <TableColumn fx:id="flightNumber" prefWidth="127.0" text="Flight Number" />
            <TableColumn fx:id="departureTime" prefWidth="57.0" text="Departure Time" />
            <TableColumn fx:id="arrivalTime" prefWidth="42.0" text="Arrival Time" />
            <TableColumn fx:id="airplaneIDNumber" prefWidth="42.0" text="Airplane ID number" />
            <TableColumn fx:id="crew" prefWidth="42.0" text="Crew" />
            <TableColumn fx:id="departurePlace" prefWidth="96.0" text="Departure place" />
            <TableColumn fx:id="arrivalPlace" prefWidth="96.0" text="Arrival place" />
            <TableColumn fx:id="passengers" prefWidth="96.0" text="Passengers" />
            <TableColumn fx:id="status" prefWidth="96.0" text="Status" />
        </columns>
    </TableView>
    <Button cancelButton="true" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" text="&lt;" />
    <Button layoutX="13.0" layoutY="67.0" mnemonicParsing="false" onAction="#addFlightButtonPressed" prefHeight="31.0" prefWidth="262.0" text="Add Flight" />
    <Button fx:id="removeButton" layoutX="14.0" layoutY="156.0" mnemonicParsing="false" onAction="#removeFlightButtonPressed" prefHeight="31.0" prefWidth="262.0" text="Remove Flight" visible="false" />
    <TextField layoutX="14.0" layoutY="112.0" prefHeight="31.0" prefWidth="262.0" promptText="Search Flights" />

    <Button fx:id="confirm" layoutX="14.0" layoutY="248.0" mnemonicParsing="false" onAction="#confirmButtonPressed" prefWidth="90.0" text="Confirm" visible="false" />
    <Button fx:id="forsake" layoutX="124.0" layoutY="248.0" mnemonicParsing="false" onAction="#forsakeButtonPressed" prefHeight="31.0" prefWidth="90.0" text="Forsake" visible="false" />
    <Label fx:id="confirmationLabel" layoutX="68.0" layoutY="214.0" text="Are you sure?" visible="false" />
   <Button fx:id="editButton" layoutX="13.0" layoutY="313.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="262.0" text="Edit" onAction="#editButtonPressed"/>

</AnchorPane>
